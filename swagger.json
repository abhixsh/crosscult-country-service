{
    "swagger": "2.0",
    "info": {
        "title": "CrossCult Country Service API",
        "description": "API for managing countries, history, traditions, and food",
        "version": "1.0.0"
    },
    "paths": {
        "/country": {
            "post": {
                "summary": "Create a new country",
                "parameters": [
                    {
                        "name": "name",
                        "in": "body",
                        "description": "Name of the country",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "image",
                        "in": "body",
                        "description": "Image URL",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "description",
                        "in": "body",
                        "description": "Description of the country",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Country created successfully"
                    }
                }
            }
        },
        "/country/{id}": {
            "get": {
                "summary": "Get a country by ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "description": "ID of the country"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Country details"
                    },
                    "404": {
                        "description": "Country not found"
                    }
                }
            },
            "put": {
                "summary": "Update a country",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "description": "ID of the country"
                    },
                    {
                        "name": "name",
                        "in": "body",
                        "description": "Name of the country",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Country updated"
                    },
                    "404": {
                        "description": "Country not found"
                    }
                }
            },
            "delete": {
                "summary": "Delete a country",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "description": "ID of the country"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Country deleted"
                    },
                    "404": {
                        "description": "Country not found"
                    }
                }
            }
        }
    }
}